{% extends 'base.html.twig' %}

{% block title %}Редактирование поста{% endblock %}

{% block body %}
    <h1>Редактирование поста от {{ post.publicationAt | date('Y-m-d, h-i-s') }}</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group-row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Опубликовать</button>
            <a href="{{ path('post', {'id': post.id}) }}" role="button" class="btn btn-primary">Отменить</a>
        </div>
    </div>
    
    {{ form_end(form) }}
{% endblock %}

