{% extends 'base.html.twig' %}

{% block title %}{{ post.id }}{% endblock %}

{% block body %}
    <div class="col-sm-10 offset-sm-2">
        <a href="/">Вернуться на главную страницу</a>
    </div>

    <h1>{{ post.headerPost}}</h1>

        <span>{{ post.publicationAt | date('Y-m-d, h-i-s') }}</span><br>
        <span>{{ post.textPost }}</span><br>
        <br>

    <div class="col-sm-10 offset-sm-2">
        <a href="{{ path('post_edit', {'id': post.id}) }}">Редактировать пост</a>
    </div>

{% endblock %}